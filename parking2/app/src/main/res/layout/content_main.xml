<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#06C7F8"
    tools:context=".Profile"
    tools:showIn="@layout/content_main">

    <Button
        android:id="@+id/changePermitButton"
        android:layout_width="209dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="#9C252525"
        android:text="Change Permit"
        android:textColor="#FFE300"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permitType" />

    <TextView
        android:id="@+id/permitType"
        android:layout_width="248dp"
        android:layout_height="43dp"
        android:layout_marginTop="88dp"
        android:text="Display Permit type"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassButton" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="248dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:text="Display UserEmail"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <Button
        android:id="@+id/changePassButton"
        android:layout_width="209dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="#9C252525"
        android:text="Change Password"
        android:textColor="#FFE300"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userEmail" />

    <Button
        android:id="@+id/UpdateSched"
        android:layout_width="209dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="#9C252525"
        android:text="Update Schedule"
        android:textColor="#FFE300"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="248dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:text="Display UserName"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="297dp"
        android:layout_height="64dp"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" Profile" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:text="Schedule"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePermitButton" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="350dp"
        android:layout_height="69dp"
        android:layout_marginBottom="100dp"
        android:fillViewport="true"
        android:scrollbarSize="10dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon: CS180 12:30 Sproul"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tue: CS161 15:00 Sproul"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wed: CS122 14:30 Olmstead"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu: CS141 13:00 MSE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fri: NONE"
                android:textSize="18sp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>